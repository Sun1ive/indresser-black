.formContainer
  background-color #fff
  min-height 100px
  border-radius: 6px
  .layout
    padding 0.5rem 2rem
  h3
    font-size: 1.6rem
    margin-bottom: 0
.form
  width 100%
  min-height: 100px
  display flex
  justify-content space-around
  align-items center
input
  border 1px solid #c0c0c0
  border-radius 6px
  background-color #fff
  min-height 40px
  padding-left 1rem
.myBtn
  background-color #FF2226
  min-height 40px
  min-width 100px
  border-radius 6px
  font-size: 1.3rem
  margin-bottom 0
  color #fff

.callForm
  display: flex
  flex-direction: column
  width 100%
  max-width 70%
  padding 1rem 0
  input
  button
    margin .6rem 0

@media (max-width 500px)
  .formContainer
    h3
      font-size: 1.5rem
  .myBtn
    font-size: 1rem
@media (max-width: 420px)
  .formContainer
    h3
      font-size: 1.2rem