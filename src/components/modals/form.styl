.formContainer
  background-color #fff
  min-height 100px
  border-radius: 6px
  position relative
  .layout
    padding 0.5rem 2rem
  h3
    font-size: 1.6rem
    margin-bottom: 0
.form
  width 100%
  min-height: 100px
  display flex
  justify-content space-around
  align-items center
  .close
    width 25px
    height 25px
    position absolute
    right 3%
    top 5%
    background-image url('/static/close.svg')
    cursor: pointer
input
  border 1px solid #c0c0c0
  border-radius 6px
  background-color #fff
  min-height 40px
  padding-left 1rem
  width 100%
.myBtn
  background-color #FF2226
  min-height 40px
  min-width 100px
  border-radius 6px
  font-size: 1.3rem
  padding: 0 1rem
  margin-bottom 0
  color #fff
  width 100%

.callForm
  display: flex
  flex-direction: column
  width 100%
  max-width 70%
  padding 1rem 0
  input
  button
    margin .6rem 0


@media (max-width 500px)
  .formContainer
    h3
      font-size: 1.5rem
  .myBtn
    font-size: 1rem
@media (max-width: 440px)
  .form
    flex-direction: column
    min-width: 200px
    width 100%
  .formContainer
    h3
      font-size: 1.1rem
      font-weight: bold
      line-height: 1.5rem